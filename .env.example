# ===========================================
# Copilot SDK Samples - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
#
# For Azure deployment (azd up), these values are read
# from your azd environment. Set them with:
#   azd env set <VAR_NAME> <value>

# ===========================================
# Required for Live Mode
# ===========================================

# GitHub Personal Access Token
# Required scopes: repo, read:org (for issue triage)
# Get one at: https://github.com/settings/tokens
GITHUB_TOKEN=

# Copilot GitHub Token (for Copilot SDK)
# This is provided by Copilot CLI or GitHub Actions
COPILOT_GITHUB_TOKEN=

# ===========================================
# Connector Mode (default: mock)
# ===========================================

# Default connector mode: "mock" or "live"
# Mock mode uses seeded test data, no credentials needed
CONNECTOR_MODE=mock

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===========================================
# GitHub Connector (Optional)
# ===========================================

# Target repository for issue triage/security alerts
GITHUB_OWNER=
GITHUB_REPO=

# ===========================================
# ISV Connectors - Tier 1 (Optional)
# ===========================================

# Jira / Confluence (Atlassian)
ATLASSIAN_EMAIL=
ATLASSIAN_API_TOKEN=
ATLASSIAN_DOMAIN=

# PagerDuty
PAGERDUTY_API_KEY=

# Datadog
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_SITE=datadoghq.com

# Snyk
SNYK_API_TOKEN=
SNYK_ORG_ID=

# Slack
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# ===========================================
# ISV Connectors - Tier 2 (Optional, not yet in infra)
# ===========================================

# ServiceNow
SERVICENOW_INSTANCE=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# Splunk
SPLUNK_HOST=
SPLUNK_TOKEN=

# Okta
OKTA_DOMAIN=
OKTA_API_TOKEN=

# ===========================================
# Azure Deployment (azd)
# ===========================================
# These are set automatically by azd or via 'azd env set'

# AZURE_ENV_NAME=         # Set by azd init
# AZURE_LOCATION=         # Set by azd init (e.g., eastus)
# AZURE_SUBSCRIPTION_ID=  # Set by azd auth
