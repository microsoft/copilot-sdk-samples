# ===========================================
# Copilot SDK Samples - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================================
# Required for Live Mode
# ===========================================

# GitHub Personal Access Token
# Required scopes: repo, read:org (for issue triage)
# Get one at: https://github.com/settings/tokens
GITHUB_TOKEN=

# Copilot GitHub Token (for Copilot SDK)
# This is provided by Copilot CLI or GitHub Actions
COPILOT_GITHUB_TOKEN=

# ===========================================
# Optional: Connector Mode
# ===========================================

# Default connector mode: "mock" or "live"
# Mock mode uses seeded test data, no credentials needed
CONNECTOR_MODE=mock

# ===========================================
# Optional: GitHub Connector
# ===========================================

# Target repository for issue triage/security alerts
GITHUB_OWNER=
GITHUB_REPO=

# ===========================================
# Optional: ISV Connectors (Tier 1)
# ===========================================

# Jira / Confluence (Atlassian)
ATLASSIAN_EMAIL=
ATLASSIAN_API_TOKEN=
ATLASSIAN_DOMAIN=

# PagerDuty
PAGERDUTY_API_KEY=

# Datadog
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_SITE=datadoghq.com

# Snyk
SNYK_API_TOKEN=
SNYK_ORG_ID=

# Slack
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=

# ===========================================
# Optional: ISV Connectors (Tier 2)
# ===========================================

# ServiceNow
SERVICENOW_INSTANCE=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# Splunk
SPLUNK_HOST=
SPLUNK_TOKEN=

# Okta
OKTA_DOMAIN=
OKTA_API_TOKEN=

# ===========================================
# Optional: Copilot CLI Configuration
# ===========================================

# Path to Copilot CLI (if not in PATH)
COPILOT_CLI_PATH=

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===========================================
# Optional: Azure Deployment (azd)
# ===========================================

# Azure subscription and resource group
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_LOCATION=eastus

# Container Apps environment name
AZURE_CONTAINER_APPS_ENVIRONMENT=
